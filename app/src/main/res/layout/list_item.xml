<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:weightSum="4">

        <!-- Columna 1: ID -->
        <TextView
            android:id="@+id/txt_col1"
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <!-- Columna 2: Departamento -->
        <TextView
            android:id="@+id/txt_col2"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Departamento"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <!-- Columna 3: Estado -->
        <TextView
            android:id="@+id/txt_col3"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Estado"
            android:textStyle="bold"
            android:layout_marginLeft="6dp"
            android:padding="5dp"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <!-- Columna 4: Opciones -->
        <LinearLayout
            android:id="@+id/layout_opciones"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal"
            android:padding="4dp">

            <!-- Botón Editar -->
            <ImageButton
                android:id="@+id/btn_editar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_circulo_verde"
                android:contentDescription="Editar"

                android:src="@drawable/baseline_edit_square_24" />

            <!-- Espacio entre botones -->
            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <!-- Botón Activar o desactivar -->
            <ImageButton
                android:id="@+id/btn_activacion"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_circulo_verde"
                android:contentDescription="Eliminar"
                android:src="@drawable/outline_check_circle_24"
                />
<!--            android:src="@drawable/outline_close_24"-->

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
