<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F8F7"
    tools:context=".ui.Panel_Control.Panel_ControlFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:padding="20dp">

            <!-- Encabezado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/fondo_icons"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="PANEL PRINCIPAL"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Texto bienvenida -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Bienvenido"
                android:textColor="#888888"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Administrador"
                android:textColor="#666666"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Contadores en cuadrÃ­cula -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:columnCount="2">

                <!-- Asistencias -->
                <LinearLayout
                    android:id="@+id/card_empleados"
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/estado_justificacion"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="Asistencias"
                        android:src="@drawable/baseline_group_24"
                        />
                    <TextView
                        android:id="@+id/tvTotalEmpleados"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_marginBottom="5dp"
                        android:textColor="#FFFFFF"
                        android:textSize="25sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txtasistencias"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Empleados"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Departamentos -->
                <LinearLayout
                    android:id="@+id/card_departamentos"
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/estado_registrado"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="Departamentos"
                        android:src="@drawable/baseline_home_24"
                        />

                    <TextView
                        android:id="@+id/tvTotalDepartamentos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_marginBottom="5dp"
                        android:shadowColor="#AA000000"
                        android:textColor="#FFFFFF"
                        android:textSize="25sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txtdepart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Departamentos"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Cargos -->
                <LinearLayout
                    android:id="@+id/card_cargos"
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/estado_tarde"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="Cargos"
                        android:src="@drawable/outline_account_box_24"
                        />

                    <TextView
                        android:id="@+id/tvTotalCargos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="5dp"
                        android:textSize="25sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txtcargos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cargos"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Roles -->
                <LinearLayout
                    android:id="@+id/card_roles"
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/fondo_amarillo_calido"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="Roles"
                        android:src="@drawable/outline_groups_24"
                        />

                    <TextView
                        android:id="@+id/tvTotalRoles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#FFFFFF"
                        android:textSize="25sp"
                        android:layout_marginBottom="5dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txtroles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Roles"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </GridLayout>


            <Button
                android:id="@+id/btnconfiguracion"
                android:layout_width="362dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/verde_agua_oscuro"
                android:drawableLeft="@drawable/baseline_settings_suggest_24"
                android:paddingLeft="30dp"
                android:text="ConfiguraciÃ³n"
                android:textAlignment="textStart"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnnosotros"
                android:layout_width="362dp"
                android:layout_height="63dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/verde_agua_oscuro"
                android:drawableLeft="@drawable/outline_group_24"
                android:paddingLeft="30dp"
                android:text="Nosotros"
                android:textAlignment="textStart"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

<!--            <Button-->
<!--                android:id="@+id/btnnosotros"-->
<!--                android:layout_width="362dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="center"-->
<!--                android:layout_marginTop="8dp"-->
<!--                android:backgroundTint="@color/verde_agua"-->
<!--                android:drawableLeft="@drawable/outline_groups_24"-->
<!--                android:paddingLeft="30dp"-->
<!--                android:text=" Nosotros"-->
<!--                android:textAlignment="textStart"-->
<!--                android:textColor="#FFFFFF" />-->

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
