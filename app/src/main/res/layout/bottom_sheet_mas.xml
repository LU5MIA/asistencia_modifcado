<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/btninforme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/verde_agua_oscuro"
        android:text="Informe" />

    <Button
        android:id="@+id/btnEmpleados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/verde_agua_oscuro"
        android:text="Empleados" />

    <Button
        android:id="@+id/btnDepartamentos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/verde_agua_oscuro"
        android:text="Departamentos" />

    <Button
        android:id="@+id/btnCargos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/verde_agua_oscuro"
        android:text="Cargos" />

    <Button
        android:id="@+id/btnRoles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/verde_agua_oscuro"
        android:text="Roles" />

</LinearLayout>
